@model IEnumerable<ByteTest.Application.Dtos.ResumeDto>
<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Manage resumes</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <p>
            <a href="#" onclick="Create('Resumes')">Create Resume</a>
          </p>
          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>Id</th>
              <th>LastName</th>
              <th>FirstName</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>Degree</th>
              <th>Cv</th>
              <th>CreationTime</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                <td>@Html.DisplayFor(modelItem => item.Degree)</td>
                <td>
                  @if (item.CvFileName != null)
                  {
                    <a href="/Resumes/GetCv/@item.Id" target="_blank">
                      @Html.DisplayFor(modelItem => item.CvFileName)
                    </a>
                  }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreationTime)</td>
                <td><a href="#" onclick="Update('Resumes', @item.Id)">Update</a> | <a href="#" onclick="Delete('Resumes', @item.Id)">Delete</a></td>
              </tr>
            }
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>